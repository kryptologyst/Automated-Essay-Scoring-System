# Environment setup for Automated Essay Scoring System
# This file contains environment variables and configuration settings

# Database Configuration
DATABASE_URL=sqlite:///essay_scoring.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Model Configuration
MODEL_NAME=distilbert-base-uncased
MAX_LENGTH=512
BATCH_SIZE=16
LEARNING_RATE=2e-5
NUM_EPOCHS=3

# Scoring Configuration
MIN_SCORE=0.0
MAX_SCORE=10.0
SCORE_PRECISION=2

# File Paths
DATA_DIR=data
MODELS_DIR=models
LOGS_DIR=logs

# Optional: Hugging Face Hub Token (for downloading models)
# HF_TOKEN=your_huggingface_token_here

# Optional: CUDA Configuration
# CUDA_VISIBLE_DEVICES=0
